<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div id="main_header"class="perl-fill perl-header ui-widget-header ui-corner-all">
               <img src="~/Content/themes/base/images/SiteLogo.png" />
               <span class="perl_user">@User.Identity.Name</span>
            </div>
        </header>
        <div id="main" >
                @RenderBody()
        </div>
        <div id="main_footer" class="perl-fill perl-footer ui-widget-header ui-corner-all" style="text-align:right">
            &copy; @DateTime.Now.Year - Powered By Perl Systems
        </div>
 
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/Amplify")
        @Scripts.Render("~/Scripts/Perl_Objects")
        @RenderSection("scripts", required: false)
    </body>
</html>
